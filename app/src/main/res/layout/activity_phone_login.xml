<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:hint="Enter Mobile Number"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_phone_iphone_black_24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:inputType="phone"/>


    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:hint="Enter verification code..."
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_lock_24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:inputType="text"
        android:layout_below="@+id/phone_number_input"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/send_verificaiton_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verification_code_input"
        android:text="Send code"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_verificaiton_code"
        android:text="Verify"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="center"
        android:visibility="invisible"/>

</RelativeLayout>